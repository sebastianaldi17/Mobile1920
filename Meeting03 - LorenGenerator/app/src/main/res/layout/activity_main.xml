<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name='MyData'
            type="com.github.sebastianaldi17.meeting03_lorengenerator.MyData"/>
        <variable
            name='LoremIpsum'
            type="com.github.sebastianaldi17.meeting03_lorengenerator.MyData"/>
        <variable
            name='BaconIpsum'
            type="com.github.sebastianaldi17.meeting03_lorengenerator.MyData"/>
        <variable
            name='SpaceIpsum'
            type="com.github.sebastianaldi17.meeting03_lorengenerator.MyData"/>
        <variable
            name='SaganIpsum'
            type="com.github.sebastianaldi17.meeting03_lorengenerator.MyData"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_text"
        style="@style/text_style"
        android:text="@string/app_title" />

    <EditText
        android:id="@+id/creator_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="placeholder 1"/>

    <Button
        android:id="@+id/creator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/creatorbutton_name" />

    <TextView
        android:id="@+id/creator_text"
        style="@style/text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder 2"
        android:visibility="gone" />
    <Spinner
        android:id="@+id/ipsum_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
    />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:contentDescription="@string/star_description"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:lineSpacingMultiplier="1.2"
            android:text="I am tired I am Broken I am Bent Please help"
            android:textSize="18sp" />
    </ScrollView>
    </LinearLayout>
</layout>